<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<section class="min-h-screen flex items-center justify-center px-4 relative overflow-hidden">
  <video autoplay loop muted playsinline class="absolute inset-0 w-full h-full object-cover z-0">
      <source src="/video/vid5.mp4" type="video/mp4">
      Your browser does not support the video tag.
  </video>

  <div class="absolute inset-0 bg-black opacity-50 z-10"></div>

  <div class="bg-[#0f172a] border border-[#1e293b] rounded-xl p-8 w-full max-w-sm shadow-xl z-20">

    <div class="flex justify-center mb-6">
      <div class="bg-blue-600 text-white p-3 rounded-full">
          <img src="images/logo.svg" alt="Icon" class="w-10 h-10 text-white" />
      </div>
    </div>

    <h2 class="text-2xl font-bold text-center text-white">Welcome Back</h2>
    <p class="text-sm text-gray-400 text-center mt-1 mb-6">Sign in to access your creative projects</p>

    <div class="mb-4">
      <label for="email" class="block text-sm font-semibold mb-1 text-white">Email Address</label>
      <div class="flex items-center bg-[#1e293b] rounded-md px-3">
          <input id="email" type="email" placeholder="Enter your email"
              class="bg-white text-black w-full py-2 px-2 focus:outline-none placeholder-gray-500 rounded-md" />
      </div>
    </div>
      
    <div class="mb-6">
      <label for="password" class="block text-sm font-semibold mb-1 text-white">Password</label>
      <div class="flex items-center bg-[#1e293b] rounded-md px-3">
          <input id="password" type="password" placeholder="Enter your password"
              class="bg-white text-black w-full py-2 px-2 focus:outline-none placeholder-gray-500 rounded-md" />
      </div>
    </div>

    <button class="w-full bg-blue-600 hover:bg-blue-700 transition-all py-2 rounded-md font-semibold flex items-center justify-center gap-2 text-white">
      <img src="images/user.svg" alt="Icon" class="w-6 h-6 text-white" />
      Sign In
    </button>

    <p class="text-center text-sm text-gray-400 mt-6">
      Don't have an account?
      <a href="/register" class="text-white font-semibold hover:underline">Create Account</a>
    </p>
  </div>
</section>