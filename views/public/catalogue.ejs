<%- layout("/layouts/boilerplate") %>

<section class="bg-black text-white py-16 px-4 ">
  <div class="max-w-6xl mx-auto text-center ">
    <!-- Heading -->
    <h1 class="text-4xl md:text-5xl font-extrabold text-indigo-400 mt-10">Animation Catalogue</h1>
    <p class="mt-6 max-w-3xl mx-auto text-lg md:text-xl text-gray-300">
      Explore our complete collection of animated works spanning feature films, commercials, educational content, and more. Each project represents our commitment to storytelling excellence.
    </p>

    
   
  </div>
</section>

<!-- =================== Catalogue page items ==================== -->
<section class="bg-black text-white px-4 py-16">
  <div class="max-w-7xl mx-auto">

    <!-- Search and Filter -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
      <input type="text" placeholder="🔍 Search projects, clients, or tags..."
        class="w-full md:w-80 px-4 py-2 rounded-md bg-[#0f172a] border border-[#1e293b] text-sm placeholder-gray-400" />

      <div class="flex flex-wrap gap-2 text-sm">
        <button class="bg-indigo-500 px-3 py-1 rounded-full text-white">All Work</button>
        <button class="bg-[#1e293b] px-3 py-1 rounded-full">2D Animation</button>
        <button class="bg-[#1e293b] px-3 py-1 rounded-full">3D Animation</button>
        <button class="bg-[#1e293b] px-3 py-1 rounded-full">Illustration</button>
        <button class="bg-[#1e293b] px-3 py-1 rounded-full">VFX & Compositing</button>
        <button class="bg-[#1e293b] px-3 py-1 rounded-full">Motion Graphics</button>
        <button class="bg-[#1e293b] px-3 py-1 rounded-full">Character Design</button>
      </div>

      <!-- <div class="text-sm px-3 py-1 rounded-md bg-[#1e293b] text-gray-300">🔳 Grid</div> -->
    </div>

    <!-- Project Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

      <% for(let artwork of catelog) { %>
          <!-- Project Card -->
          <div class="bg-[#111827] rounded-xl overflow-hidden border border-[#1f2937] shadow hover:shadow-xl transition duration-300">
            
            <!-- Image -->
            <img src="<%= artwork.imageUrl %>" alt="<%= artwork.title %>" class="w-full h-40 object-cover" />
            
            <!-- Card Content -->
            <div class="p-4">
              <p class="text-xs text-indigo-400 uppercase"><%= artwork.title %></p>
              <h3 class="text-lg font-semibold mt-1"><%= artwork.studioName %></h3>
              <p class="text-xs text-gray-400 mt-1"><%= artwork.year %></p>

              <!-- Categories -->
              <div class="flex flex-wrap gap-1 text-xs mt-3">
                <% if (artwork.categories && artwork.categories.length > 0) { %>
                  <% artwork.categories.forEach(function(category) { %>
                    <span class="bg-[#1e293b] px-2 py-0.5 rounded-full text-gray-300"><%= category %></span>
                  <% }) %>
                <% } else { %>
                  <span class="bg-[#1e293b] px-2 py-0.5 rounded-full text-gray-400 italic">No Category</span>
                <% } %>
              </div>

              <!-- View Details Button -->
              <a href="#"
                class="open-modal-btn inline-flex items-center justify-center px-4 py-2 mt-4 text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 transition-colors duration-200 shadow-sm"
                data-project-title="<%= artwork.title %>"
                data-project-description="A project by <%= artwork.studioName %> created in <%= artwork.year %>."
                data-project-image="<%= artwork.imageUrl %>"
                data-project-client="<%= artwork.studioName %>"
                data-project-duration="N/A"
                data-project-tags="<%= artwork.categories.join(', ') %>">
                  View Details
              </a>
            </div>
          </div>
        <% } %>
    </div>
  </div>
</section>

<!-- ================================== Project Details Modal POPUP ===================================-->

<div id="projectModal" class="hidden fixed inset-0 z-50 overflow-y-auto bg-black bg-opacity-90 flex items-center justify-center p-4">
    
  <button id="closeModal" class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors duration-200 z-[100] p-2 rounded-full bg-gray-700 bg-opacity-75 hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-indigo-500">
      <i data-lucide="x" class="w-10 h-6">X</i>
  </button>

  <div class="bg-gray-900 rounded-lg shadow-2xl w-full max-w-4xl lg:max-w-5xl relative animate-fade-in-up flex flex-col max-h-[90vh]">
      
      <button id="unmuteButton" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-gray-800 bg-opacity-75 text-white px-4 py-2 rounded-full hidden z-10">
          Unmute <i data-lucide="volume-2" class="w-4 h-4 inline-block ml-1"></i>
      </button>

      <div class="flex-grow overflow-y-auto custom-scrollbar">
          <div class="w-full relative pb-[56.25%] overflow-hidden bg-gray-800 flex items-center justify-center"> <img id="modalProjectImage" src="" alt="Project Image" class="absolute inset-0 w-full h-full object-contain">
              </div>

          <div class="p-6 md:p-8">
              <h3 id="modalProjectTitle" class="text-3xl font-bold text-white mb-3"></h3>
              <p id="modalProjectDescription" class="text-gray-400 text-lg mb-4"></p>
              
              <div id="modalProjectTags" class="flex flex-wrap gap-2 mb-6">
                  </div>
              
              <p id="modalProjectClient" class="text-gray-500 text-sm"></p>
              <p id="modalProjectDuration" class="text-gray-500 text-sm mb-6"></p>

              <div class="mt-4">
                  <a href="#" id="modalVisitProjectLink" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 transition-all duration-300 shadow-md">
                      Visit Project Page <i data-lucide="external-link" class="w-5 h-5 ml-2"></i>
                  </a>
              </div>

              </div>
      </div>
  </div>
</div>

<style>
/* Custom scrollbar for Webkit browsers */
.custom-scrollbar::-webkit-scrollbar {
  width: 8px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: #1f2937; /* Darker track */
  border-radius: 10px;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background-color: #4a5568; /* Greyish thumb */
  border-radius: 10px;
  border: 2px solid #1f2937; /* Border around thumb */
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background-color: #6b7280; /* Lighter grey on hover */
}
</style>

<script src="/js/catalogue.js"></script>