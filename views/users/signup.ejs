<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<section class="min-h-screen flex items-center justify-center bg-black px-4">
    <div class="bg-[#0f172a] text-white border border-[#1e293b] rounded-xl p-8 w-full max-w-sm shadow-xl">
  
      <!-- Icon -->
      <div class="flex justify-center mb-6">
        <div class="bg-blue-600 p-3 rounded-full">
            <img src="images/logo.svg" alt="Icon" class="w-10 h-10 text-white" />
        </div>
      </div>
  
      <!-- Heading -->
      <h2 class="text-2xl font-bold text-center">Create Account</h2>
      <p class="text-sm text-gray-400 text-center mt-1 mb-6">Join us and start your creative journey</p>
  
      <!-- Name -->
      <div class="mb-4">
        <label for="name" class="block text-sm font-semibold mb-1">Full Name</label>
        <input id="name" type="text" placeholder="Enter your name"
          class="w-full px-3 py-2 rounded-md bg-[#0f172a] text-white placeholder-gray-500 border border-[#334155] focus:outline-none focus:ring-2 focus:ring-blue-600" />
      </div>
  
      <!-- Email -->
      <div class="mb-4">
        <label for="email" class="block text-sm font-semibold mb-1">Email Address</label>
        <input id="email" type="email" placeholder="Enter your email"
          class="w-full px-3 py-2 rounded-md bg-[#0f172a] text-white placeholder-gray-500 border border-[#334155] focus:outline-none focus:ring-2 focus:ring-blue-600" />
      </div>
  
      <!-- Password -->
      <div class="mb-6">
        <label for="password" class="block text-sm font-semibold mb-1">Password</label>
        <input id="password" type="password" placeholder="Create a password"
          class="w-full px-3 py-2 rounded-md bg-[#0f172a] text-white placeholder-gray-500 border border-[#334155] focus:outline-none focus:ring-2 focus:ring-blue-600" />
      </div>
  
      <!-- Sign Up Button -->
      <button
        class="w-full bg-blue-600 hover:bg-blue-700 transition-all py-2 rounded-md font-semibold flex items-center justify-center gap-2">
        <img src="images/user.svg" alt="Icon" class="w-6 h-6 text-white" />
        Sign Up
      </button>
  
      <!-- Footer -->
      <p class="text-center text-sm text-gray-400 mt-6">
        Already have an account?
        <a href="/signin" class="text-blue-500 hover:underline font-semibold">Sign In</a>
      </p>
    </div>
  </section>
  