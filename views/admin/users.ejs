<%- layout("/layouts/adminLayout") %>

<div class="p-6 bg-gray-900 flex-1 overflow-auto">
    <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden border border-gray-700">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-800">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        <div class="flex items-center">
                            Name
                            <i class="fas fa-sort ml-2 text-gray-500"></i>
                        </div>
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        <div class="flex items-center">
                            Contact Info
                            <i class="fas fa-sort ml-2 text-gray-500"></i>
                        </div>
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        <div class="flex items-center">
                            Roles
                            <i class="fas fa-sort ml-2 text-gray-500"></i>
                        </div>
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700">
                <% allUsers.forEach(user => { %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-200">
                        <div class="flex items-center">
                            <img class="h-8 w-8 rounded-full" src="/images/face1.jpeg" alt="<%= user.name %>">
                            <div class="ml-4"><%= user.name %></div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400"><%= user.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-700 text-gray-200">
                            <%= user.role %>
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="/users/<%= user.id %>/edit" class="text-blue-500 hover:text-blue-400 transition-colors duration-200">
                            <i class="fas fa-pencil-alt text-lg"></i>
                        </a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>