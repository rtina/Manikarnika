<%- layout("/layouts/adminLayout") %>

<div class="p-8 bg-gray-900 min-h-screen text-white">

    <div class="mb-8">
        <h1 class="text-3xl font-bold">Studio Dashboard</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-xl">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-medium text-gray-400">Total Projects</h3>
                <i class="fas fa-project-diagram text-xl text-blue-500"></i>
            </div>
            <p class="text-4xl font-bold">325</p>
            <p class="text-sm text-green-400">+12% from last month</p>
        </div>

        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-xl">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-medium text-gray-400">Active Clients</h3>
                <i class="fas fa-users text-xl text-purple-500"></i>
            </div>
            <p class="text-4xl font-bold">78</p>
            <p class="text-sm text-red-400">-2% from last month</p>
        </div>

        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-xl">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-medium text-gray-400">Pending Tasks</h3>
                <i class="fas fa-tasks text-xl text-yellow-500"></i>
            </div>
            <p class="text-4xl font-bold">14</p>
            <p class="text-sm text-gray-400">2 new tasks</p>
        </div>

        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 shadow-xl">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-medium text-gray-400">Team Rating</h3>
                <i class="fas fa-star text-xl text-yellow-400"></i>
            </div>
            <p class="text-4xl font-bold">4.9</p>
            <p class="text-sm text-green-400">Based on 150 reviews</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 space-y-6">

            <div class="bg-gray-800 rounded-lg shadow-xl overflow-hidden border border-gray-700">
                <div class="p-6">
                    <h2 class="text-xl font-bold mb-4">Active Projects</h2>
                </div>
                <div class="divide-y divide-gray-700">
                    <div class="grid grid-cols-4 text-xs font-medium text-gray-400 uppercase tracking-wider px-6 py-4 border-b border-gray-700">
                        <div class="col-span-1">Project</div>
                        <div class="col-span-1">Client</div>
                        <div class="col-span-1">Deadline</div>
                        <div class="col-span-1">Progress</div>
                    </div>
                    <div class="grid grid-cols-4 items-center px-6 py-4 text-sm hover:bg-gray-700 transition-colors duration-200">
                        <div class="col-span-1 font-medium">Website Redesign</div>
                        <div class="col-span-1">GlobalTech Solutions</div>
                        <div class="col-span-1">Dec 20, 2023</div>
                        <div class="col-span-1 flex items-center space-x-2">
                            <div class="w-2/3 bg-gray-700 rounded-full h-2">
                                <div class="bg-blue-500 h-2 rounded-full" style="width: 75%;"></div>
                            </div>
                            <span class="text-sm text-gray-400">75%</span>
                        </div>
                    </div>
                    <div class="grid grid-cols-4 items-center px-6 py-4 text-sm hover:bg-gray-700 transition-colors duration-200">
                        <div class="col-span-1 font-medium">Mobile App Concept</div>
                        <div class="col-span-1">Innovate Inc.</div>
                        <div class="col-span-1">Jan 10, 2024</div>
                        <div class="col-span-1 flex items-center space-x-2">
                            <div class="w-2/3 bg-gray-700 rounded-full h-2">
                                <div class="bg-yellow-500 h-2 rounded-full" style="width: 40%;"></div>
                            </div>
                            <span class="text-sm text-gray-400">40%</span>
                        </div>
                    </div>
                    <div class="grid grid-cols-4 items-center px-6 py-4 text-sm hover:bg-gray-700 transition-colors duration-200">
                        <div class="col-span-1 font-medium">Branding Campaign</div>
                        <div class="col-span-1">Creative Sparks</div>
                        <div class="col-span-1">Dec 5, 2023</div>
                        <div class="col-span-1 flex items-center space-x-2">
                            <div class="w-2/3 bg-gray-700 rounded-full h-2">
                                <div class="bg-green-500 h-2 rounded-full" style="width: 90%;"></div>
                            </div>
                            <span class="text-sm text-gray-400">90%</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 p-6 rounded-lg shadow-xl border border-gray-700">
                <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
                <div class="space-y-4">
                    <div class="flex items-start space-x-4">
                        <div class="h-8 w-8 bg-blue-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-check text-white text-sm"></i>
                        </div>
                        <div>
                            <p class="text-sm"><span class="font-semibold">Emma Wilson</span> completed a task on <span class="font-semibold">Website Redesign</span>.</p>
                            <p class="text-xs text-gray-400 mt-1">2 hours ago</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-4">
                        <div class="h-8 w-8 bg-purple-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-plus text-white text-sm"></i>
                        </div>
                        <div>
                            <p class="text-sm"><span class="font-semibold">Ryan Taylor</span> added a new project: <span class="font-semibold">Music Album Cover</span>.</p>
                            <p class="text-xs text-gray-400 mt-1">5 hours ago</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-4">
                        <div class="h-8 w-8 bg-green-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-comment text-white text-sm"></i>
                        </div>
                        <div>
                            <p class="text-sm"><span class="font-semibold">Sophia Chen</span> commented on a task in <span class="font-semibold">Branding Campaign</span>.</p>
                            <p class="text-xs text-gray-400 mt-1">Yesterday</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-1">
            <div class="bg-gray-800 p-6 rounded-lg shadow-xl border border-gray-700">
                <h2 class="text-xl font-bold mb-4">Studio Members</h2>
                <div class="space-y-4">
                    <div class="flex items-center space-x-4">
                        <div class="h-10 w-10 bg-blue-600 rounded-full flex items-center justify-center font-bold text-white text-xs">EW</div>
                        <div>
                            <p class="font-medium">Emma Wilson</p>
                            <p class="text-xs text-gray-400">Visual Artist</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="h-10 w-10 bg-gray-600 rounded-full flex items-center justify-center font-bold text-white text-xs">RT</div>
                        <div>
                            <p class="font-medium">Ryan Taylor</p>
                            <p class="text-xs text-gray-400">Sound Designer</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="h-10 w-10 bg-orange-600 rounded-full flex items-center justify-center font-bold text-white text-xs">SC</div>
                        <div>
                            <p class="font-medium">Sophia Chen</p>
                            <p class="text-xs text-gray-400">Photographer</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="h-10 w-10 bg-pink-600 rounded-full flex items-center justify-center font-bold text-white text-xs">MJ</div>
                        <div>
                            <p class="font-medium">Marcus Johnson</p>
                            <p class="text-xs text-gray-400">Illustrator</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>