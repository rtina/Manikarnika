<script>
  function filterNotifications() {
    const selected = document.getElementById('filter').value;
    const cards = document.querySelectorAll('#notificationList > div');

    cards.forEach(card => {
      const type = card.dataset.type;
      const read = card.dataset.read === "true";

      let show = false;

      if (selected === "all") show = true;
      else if (selected === "unread") show = !read;
      else if (selected === type) show = true;

      card.style.display = show ? "block" : "none";
    });
  }

  function markAsRead(button) {
    const card = button.closest('div[data-type]');
    card.dataset.read = "true";
    button.outerHTML = `<span class="text-xs text-gray-500 italic">Read</span>`;
    filterNotifications(); // Refresh filter if on unread
  }
</script>


