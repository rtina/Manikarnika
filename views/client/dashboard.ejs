    document.getElementById("chatHeader").innerText = `Chat with ${name.charAt(0).toUpperCase() + name.slice(1)}`;
    const historyDiv = document.getElementById("chatHistory");
    historyDiv.innerHTML = "";

    chatData[name].forEach(msg => {
      const bubble = document.createElement("div");
      bubble.className = `p-2 rounded max-w-xs ${msg.from === "client" ? 'bg-blue-200 self-end text-right' : 'bg-gray-200 text-left'}`;
      bubble.innerHTML = `<p class="text-sm">${msg.text}</p><p class="text-xs text-gray-500 mt-1">${msg.time}</p>`;
      historyDiv.appendChild(bubble);
    });
  }

  function sendMessage() {
    const input = document.getElementById("messageInput");
    if (!input.value.trim() || !currentChat) return;

    const newMessage = {
      from: "client",
      text: input.value.trim(),
      time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
    };

    chatData[currentChat].push(newMessage);
    loadChat(currentChat);
    input.value = "";
  }
</script>



